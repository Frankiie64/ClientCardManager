@{
    ViewData["Title"] = "Home";
}

<div class="container mt-5">
    <h2 class="card-title">Dashboard</h2>
    <div class="row">
        <div class="col-md-8 my-auto">
            <div id="spiner" class="spinner-border ms-5"></div>
            <canvas id="myChart" style="max-height: 400px;"></canvas>
        </div>
        <div class="col-md-4 mt-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Estadísticas</h5>
                    <ul class="list-group">
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            Clientes en el sistema:
                            <span class="badge bg-primary rounded-pill" id="clientesCount">@ViewData["clientesTotal"].ToString()</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            Clientes Registrados hoy:
                            <span class="badge bg-success rounded-pill" id="registrosHoy">@ViewData["clientesTotalHoy"]</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            Tarjetas creadas hoy:
                            <span class="badge bg-warning rounded-pill" id="tarjetasCreadas">@ViewData["tarjetasTotalHoy"]</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/Home/Index.js"></script>
}
